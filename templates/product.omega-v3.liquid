{%- include 'LS_83195002989_global' -%}
{% assign current_variant = product.selected_or_first_available_variant %}
<link rel="stylesheet" href="https://use.typekit.net/rib3pdk.css">
<script type="application/ld+json">
  {
  "@context": "http://schema.org/",
                                                  "@type": "Product",
                                                "@id": {{ canonical_url | json }},
  "name": {% include 'LS_83195002989_title', item: product %}{{ LS_83195002989_item_title | json }},
  "url": {{ shop.url | append: product.url | json }},
  {%- if product.featured_image -%}
    {%- assign image_size = product.featured_image.width | append: 'x' -%}
    "image": [
    {% comment ls-rpl %}
      {{ product.featured_image.src | img_url: image_size | prepend: "https:" | json }}{% endcomment %}
    {%- capture LS_IMG_URL -%}
      {%- render "ls-img-url", image: product.featured_image.src, img_url: image_size -%}{%- endcapture -%}
    {{ LS_IMG_URL | prepend: "https:" | json }}{% comment /ls-rpl %}{% endcomment %}
    ],
  {%- endif -%}
  "description": {% include 'LS_83195002989_description', item: product %}{{ LS_83195002989_item_desc | strip_html | json }},
  {%- if current_variant.sku != blank -%}
    "sku": {{ current_variant.sku | json }},
  {%- endif -%}
  "brand": {
  "@type": "Thing",
                                                    "name": {{ product.vendor | json }}
  },
  "offers": [
  {%- for variant in product.variants -%}
    {% if variant.sku != 'SKU-SSS-006' %}
      {
      "@type" : "Offer",
      {%- if variant.sku != blank -%}
        "sku": {{ variant.sku | json }},
      {%- endif -%}
      "availability" : "http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}",
      "price" : {{ variant.price | divided_by: 100.00 | json }},
      "priceCurrency" : {{ cart.currency.iso_code | json }},
      "url" : {{ shop.url | append: variant.url | json }}
      }{% unless forloop.last or variant.sku == 'SKU-SSS-004' %},{% endunless %}
    {% endif %}
  {%- endfor -%}
  ]
  }
</script>

