<section class="new-year">
  <div class="new-year-voice">
    <div class="voice">
      <picture>
        {% if section.settings.image_mobile != blank %}
        	<source media="(max-width: 1000px)" srcset="{{ section.settings.image_mobile  | img_url: 'master' }}">
            <img src="{{ section.settings.image  | img_url: 'master' }}" alt="">
        {% endif %}
      </picture>
      <div class="content">
        <h1>{{ section.settings.header }}</h1>
        {{ section.settings.text }}
        <a href="{{ section.settings.link }}" class="btn red-btn">{{ section.settings.link_text}}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .content {
      color: white;
  }
  
</style>

{% schema %}
  {
    "name": "Cooper's Voice",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "image"
      },
      {
        "id": "image_mobile",
        "type": "image_picker",
        "label": "image mobile"
      },
      {
        "id": "header",
        "type": "text",
        "label": "Header"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Link URL"
      },
      {
        "id": "link_text",
        "type": "text",
        "label": "Link text"
      }
    ]
  }
{% endschema %}

