<section class="school-shop-now">
  <div class="container">
    <h2>{{ section.settings.header }}</h2>
    {{ section.settings.text }}
    <a href="{{ section.settings.link }}" class="btn red-btn">{{ section.settings.link_text}}</a>
  </div>
  <picture>
    {% if section.settings.image_mobile != blank %}
        <source media="(max-width: 1000px)" srcset="{{ section.settings.image_mobile  | img_url: 'master' }}">
        <img src="{{ section.settings.image  | img_url: 'master' }}" alt="">
    {% endif %}
  </picture>
</section>

<style>
  .school-shop-now .container h2 {
    	color: #ffffff;
  }
  
  .school-shop-now .container {
    	color: #ffffff;
  }
  
  @media (min-width: 1000px) {
	.school-shop-now picture img{
        text-align: left;
      	align-items: center;
        height: 100%;
      	background-image: linear-gradient(to right, #000000 0, #000000 55%, #00f0 100%);  
      	background-size: 140.938vw auto;
      	background-position: right center;
    }
    .school-shop-now picture{
		align: right;
    }
  }
  @media screen and (max-width:768px){
  
    
  section.school-shop-now picture:before {
      content: '';
      position: absolute;
      height: 100%;
      width: 100vw;
      background: linear-gradient(to top, #4f4f4e 0, #4f4f4e 21%, #00f0 50%)!important;
      left: 0px;
      top: 0px;
      z-index: 3;
    }
  }


</style>

{% schema %}
  {
    "name": "Shop Now",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "image"
      },
      {
        "id": "image_mobile",
        "type": "image_picker",
        "label": "image mobile"
      },
      {
        "id": "header",
        "type": "text",
        "label": "Header"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Link URL"
      },
      {
        "id": "link_text",
        "type": "text",
        "label": "Link text"
      }
    ]
  }
{% endschema %}

