<section class="hero">
  <div class="hero-slider">
    <div class="slide">
      	<picture class="img-gradient">
        	{% if section.settings.image_mobile != blank %}
        		<source media="(max-width: 1000px)" srcset="{{ section.settings.image_mobile  | img_url: 'master' }}">
            	<img src="{{ section.settings.image  | img_url: 'master' }}" alt="">
        	{% endif %}
        </picture>
      <div class="content">
        <h1>{{ section.settings.header }}</h1>
        {{ section.settings.text }}
        <a href="{{ section.settings.link }}" class="btn red-btn">{{ section.settings.link_text}}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero .content h1 {
    	color: #ffffff;
  }
  
  .hero .content {
    	color: #ffffff;
  }
  
  @media (min-width: 1000px) {
    .hero .img-gradient {
        position: relative;
    }
    
    .hero .img-gradient::after {
        content: '',
        position: absolute;
        left: 0;
      	top: 0;
       	width: 100%;
        height: 100%;
      	background-image: linear-gradient(to right, #000000 0, #000000 55%, #00f0 100%);
    }
    
	.hero .slide{
        text-align: left;
      	align-items: center;
        height: 35vw;
      	background-image: linear-gradient(to right, #000000 0, #000000 55%, #00f0 100%);  
      	background-size: 140.938vw auto;
      	background-position: right center;
    }
    .hero .slide picture img {
		align: right;
    }
  }

</style>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "image"
      },
      {
        "id": "image_mobile",
        "type": "image_picker",
        "label": "image mobile"
      },
      {
        "id": "header",
        "type": "text",
        "label": "Header"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Link URL"
      },
      {
        "id": "link_text",
        "type": "text",
        "label": "Link text"
      }
    ]
  }
{% endschema %}

