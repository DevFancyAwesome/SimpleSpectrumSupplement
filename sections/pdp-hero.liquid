<section class="hero">
  <picture>
    {% if section.settings.image_mobile != blank %}
        <source media="(max-width: 1000px)" srcset="{{ section.settings.image_mobile  | img_url: 'master' }}">
        <img src="{{ section.settings.image  | img_url: 'master' }}" alt="">
    {% endif %}
  </picture>
  <div class="container">
    <div class="content">
      <h2>{{ section.settings.header }}</h2>
      <h1>{{ section.settings.sub_header }}</h1>
       <div class="desktop">
        {{ section.settings.text }}
       </div>
       <div class="mobile">
        {{ section.settings.text_mobile }}
       </div>
      <a href="{{ section.settings.link }}" class="btn red-btn">{{ section.settings.link_text}}</a>
    </div>
  </div>
</section>
<style>
  .content {
      color: white;
  }
  
</style>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "image"
      },
      {
        "id": "image_mobile",
        "type": "image_picker",
        "label": "image mobile"
      },
      {
        "id": "header",
        "type": "text",
        "label": "Header"
      },
      {
        "id": "sub_header",
        "type": "text",
        "label": "Subheading"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text"
      },
      {
        "id": "text_mobile",
        "type": "richtext",
        "label": "Text Mobile"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Link URL"
      },
      {
        "id": "link_text",
        "type": "text",
        "label": "Link text"
      }
    ]
  }
{% endschema %}

