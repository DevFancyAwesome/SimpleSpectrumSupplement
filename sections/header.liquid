        </nav>
        <div class="user">
          <a href="/account">
            
          </a>
        </div>
      </div>
      <div class="cart">
        <a href="/cart">
          <span class="icon"></span>
        </a>
        <span class="product-number">{{ cart.item_count }}</span>
      </div>
    </div>
    <div
      class="header-banner"
      {% if page.template_suffix == "halloween-2" %}
      style="display:none"
      {% endif %}>
      <div class="container">
        <div class="title">
          {% capture LS_locales_settings_key %}
            {{ section.id }}.banner_header{% endcapture %}
          {% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_83195002989_settings_value == blank %}
            {{ section.settings.banner_header }}
          {% else %}
            {{ LS_83195002989_settings_value }}{% endif %}
        </div>
        <div class="text">
          {% capture LS_locales_settings_key %}
            {{ section.id }}.banner_Text{% endcapture %}
          {% include 'LS_83195002989_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_83195002989_settings_value == blank %}
            {{ section.settings.banner_Text }}
          {% else %}
            {{ LS_83195002989_settings_value }}{% endif %}
        </div>
      </div>
    </div>
  </header>
{% endif %}
