                <a href="{{ link.url }}">{% include 'LS_83195002989_nav_title', item: link %}{{ LS_83195002989_link_title }}</a>
                {% if link.links.size > 0 %}
                  <ul>
                    {% for child_link in link.links %}
                      <li>
                        <a href="{{ child_link.url }}">{% include 'LS_83195002989_nav_title', item: child_link %}{{ LS_83195002989_link_title }}</a>
                      </li>
                    {% endfor %}
