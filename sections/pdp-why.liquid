<section class="why-ss">
  <div class="container">
    <div class="text">
      <h2>{{ section.settings.title }}</h2>
      {{ section.settings.text }}
    </div>
  </div>
  {% if section.settings.image != blank  %}
    <picture class="bg">
      {% if section.settings.image_mobile != blank %}
          <source media="(max-width: 1000px)" srcset="{{ section.settings.image_mobile  | img_url: 'master' }}">
          <img src="{{ section.settings.image  | img_url: 'master' }}" alt="">
      {% endif %}
    </picture>
  {% endif %}
</section>

{% schema %}
  {
    "name": "Why SS",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "text",
        "type": "html",
        "label": "Text"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "image"
      },
      {
        "id": "image_mobile",
        "type": "image_picker",
        "label": "image mobile"
      }
    ]
  }
{% endschema %}
