{%- comment -%}
    Render Shopify locales array
{%- endcomment -%}

{%- capture shopifyLocalesArray -%}
    [
        {%- capture loop -%}
            {%- for locale in localization.available_languages -%}
                ,{"code":{{ locale.iso_code | json }},"name":{{ locale.name | json }},"endonym_name":{{ locale.endonym_name | json }},"rootUrl":{{ locale.root_url | json }}}
            {%- endfor -%}
        {%- endcapture -%}

        {{ loop | remove_first: "," }}
    ]
{%- endcapture -%}

{{ shopifyLocalesArray | strip_newlines }}